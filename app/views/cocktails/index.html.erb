<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://images.unsplash.com/photo-1497990902153-c6d041aad676?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2307&q=80');">
  <div class="container">
    <h1>Welcome Mixologist!</h1>
    <p>
      <span id="banner-typed-text"></span>
    </p>
  </div>
</div>

<div class="container my-3">
  <div class="row">

    <div class="col-12">
      <h1>All our Cocktails</h1>
    </div>

    <div class="col-12">
      <p><%= @count_message %></p>
    </div>


<div class="cards">
      <% @cocktails.each do |cocktail| %>
        <%= link_to cocktail_path(cocktail), class:"text-decoration-none" do %>
          <div class="card-product">
            <img src=<%= "#{cocktail.img_url || "https://source.unsplash.com/random/?#{rand(0..10)},cocktail"}" %> />
            <div class="card-product-infos">
              <h2><%= cocktail.name %></h2>
              <p class=""><% cocktail.doses.take(3).each do |dose| %>
                  <span class="btn btn-primary btn-sm disabled my-1"><small><%= dose.ingredient.name %></small></span>
                <% end %>
              </p>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
