<div class="col-6 m-auto">
  <div class="cocktail-form">
    <h1><%= @cocktail.name  %></h1>
    <div class="mt-3">
      <%= render "form", cocktail: @cocktail %>
    </div>
  </div>
    <div class="text-right m-3">
    <%= link_to cocktail_path(@cocktail),
                            method: :delete,
                            data: { confirm: "Are you sure to delete this cocktail?" } do %>

        <div><i class="fas fa-trash text-muted"></i></div>
      <% end %>
    </div>
</div>
</div>
