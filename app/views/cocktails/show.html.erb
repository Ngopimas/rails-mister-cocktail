<div class="container my-3">
  <div class="row">
<img class="show-cover"  src=<%= "#{@cocktail_img}" %> />
    <div class="mt-n5 col-8">
      <div class="cocktail-show-card">
        <h1><%= @cocktail.name %></h1>
      </div>
      <div class="cocktail-show-card">
        <div class="img-cocktail" style="background-image: url(<%= "'#{@cocktail_img}'" %>)"></div>
        <h3>A bit more about this cocktail...</h3>
        <p><%= @cocktail.description %></p>
      </div>
    </div>

    <div class="col-4">
      <div class="cocktail-show-card">
        <div class="flex-align">
          <h6>Share this cocktail</h6>

          <div class="d-flex">
            <i class="fab fa-facebook-square fa-2x mr-2"></i>
            <i class="fab fa-twitter-square fa-2x mr-2"></i>
            <i class="fab fa-pinterest-square fa-2x mr-2"></i>
            <i class="fas fa-envelope-square fa-2x"></i>
          </div>
        </div>
      </div>

      <div class="cocktail-show-card">
        <h5>Ingredients:</h5>
        <% @cocktail.doses.each do |dose| %>
          <p class="mb-0"><%= dose.description %> of <%= dose.ingredient.name %></p>
        <% end %>

      </div>
    </div>
  </div>
</div>

