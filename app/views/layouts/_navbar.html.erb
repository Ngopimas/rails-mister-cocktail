<nav class="navbar navbar-expand-lg navbar-light bg-light mb-1">
  <%= link_to cocktails_path, class: "navbar-brand" do %>
    <i class="fas fa-cocktail"> Cocktails</i>
  <% end %>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <div class="ml-auto d-flex">
      <%= form_tag cocktails_path, method: :get, class: "form-inline my-2 my-lg-0" do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control mr-sm-2",
          placeholder: "Find a cocktail"
        %>
        <%= submit_tag "Search", class: "btn btn-outline-primary my-2 my-sm-0" %>
      <% end %>
      <%= link_to 'New cocktail', new_cocktail_path, class: "btn btn-primary my-2 my-sm-0 ml-2" %>
    </div>
  </div>
</nav>
